{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "RobotsTxtAppSettings",
  "type": "object",
  "properties": {
    "Robots": {
      "$ref": "#/definitions/RobotsTxtDefinition"
    }
  },
  "definitions": {
    "RobotsTxtDefinition": {
      "type": "array",
      "description": "List of robot options",
      "items": {
        "$ref": "#/definitions/RobotsTxtOption"
      }
    },
    "RobotsTxtOption": {
      "type": "object",
      "description": "Robot option",
      "properties": {
        "UserAgent": {
          "type": "string",
          "description": "User Agent to target",
          "default": "*"
        },
        "Allow": {
          "type": "array",
          "description": "Array of paths to allow",
          "items": {
            "type": "string"
          },
          "default": null
        },
        "Disallow": {
          "type": "array",
          "description": "Array of paths to disallow",
          "items": {
            "type": "string"
          },
          "default": [ "/" ]
        },
        "Sitemap": {
          "type": "string",
          "description": "Path to the sitemap.xml file",
          "default": null
        }
      }
    }
  }
}